{
  "name": "@simplearabcode/courses-libs",
  "version": "0.2.1",
  "description": "Shared libraries for Simple Arab Code courses platform",
  "author": "Simple Arab Code",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./common": {
      "types": "./dist/common/src/index.d.ts",
      "default": "./dist/common/src/index.js"
    },
    "./database": {
      "types": "./dist/database/src/index.d.ts",
      "default": "./dist/database/src/index.js"
    },
    "./events": {
      "types": "./dist/events/src/index.d.ts",
      "default": "./dist/events/src/index.js"
    },
    "./shared": {
      "types": "./dist/shared/src/index.d.ts",
      "default": "./dist/shared/src/index.js"
    }
  },
  "files": [
    "dist",
    "common",
    "database",
    "events",
    "shared",
    "README.md"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/simplearabcode/courses-libs.git"
  },
  "scripts": {
    "build": "tsc -b tsconfig.lib.json",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "dependencies": {
    "@fastify/jwt": "^10.0.0",
    "@prisma/client": "^6.17.1",
    "ajv": "^8.17.1",
    "ajv-errors": "^3.0.0",
    "ajv-formats": "^3.0.1",
    "amqplib": "^0.10.9",
    "bcrypt": "^6.0.0",
    "fastify": "^5.6.1",
    "ioredis": "^5.8.1",
    "jsonwebtoken": "^9.0.2",
    "pino": "^10.0.0"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.7",
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.8.0",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@prisma/client": "^6.17.1",
    "fastify": "^5.6.1"
  }
}
